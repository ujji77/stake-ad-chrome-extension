{
    "manifest_version": 3,
    "name": "Stake Ad Extension",
    "version": "1.0",
    "description": "Processes images on webpage through canvas",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "<all_urls>",
      "https://*.twitter.com/*",
      "https://*.x.com/*",
      "https://pbs.twimg.com/*",
      "https://ton.twitter.com/*",
      "https://abs.twimg.com/*",
      "https://media.twitter.com/*",
      "https://pbs.x.com/*",
      "https://ton.x.com/*",
      "https://abs.x.com/*",
      "https://media.x.com/*"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }